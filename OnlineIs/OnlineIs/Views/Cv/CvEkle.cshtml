@{
    ViewBag.Title = "Cv Ekle";
}
@using OnlineIs.Models

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    CV OLuştur
                </div>
                @*<div class="block-controls">
                        <a href="/Content//Sirket/IlanEkle"> <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span> </a>
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>*@
            </div>

            <div class="block-content-outer">

                <div class="block-content-inner">
                    <form role="form" action="/CV/Cvekle" method="post">

                        @*  <div class="form-group">

            <input type="text" name="ilanADI" class="form-control" id="exampleInputEmail1" placeholder="İlan Adı Giriniz" />

        </div>*@


                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Eğitim Seviyesi
                            </label><br />
                            <select name="egitimseviyeID" class="form-control">
                                @foreach (EGITIMSEVIYESI egitimseviyesi in ViewBag.egitimseviyesi)
                                {
                                    <option value="@egitimseviyesi.egitimseviyeID">@egitimseviyesi.egitimseviyeADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Yabancı Dil
                            </label><br />
                            <select name="yabancidilID" class="form-control">
                                @foreach (YABANCIDIL yabancidil in ViewBag.yabancidil)
                                {
                                    <option value="@yabancidil.yabancidilID">@yabancidil.yabancidilADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Okul
                            </label><br />
                            <select name="okulID" class="form-control">
                                @foreach (OKUL okul in ViewBag.okul)
                                {
                                    <option value="@okul.okulID">@okul.okulADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Cinsiyet</label><br />
                            <input type="text" name="cinsiyet" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Yetenek</label><br />
                            <input type="text" name="yetenek" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Doğum Günü</label><br />
                            <input type="date" name="dogumgunu" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Referans</label><br />
                            <input type="text" name="referans" class="form-control" id="exampleInputPassword1">
                        </div>


                        <button type="submit" class="btn btn-primary">Kaydet</button>
</div>

                </form>
            </div>

        </div>
    </div>
</div>
</div>
