@{
    ViewBag.Title = "Cv Listesi";
}
@using OnlineIs.Models;

@model List<CV>

<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                CV
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <table class="table table-striped table-hover">
                    <tbody>
                        @foreach (CV ı in Model)
                        {
                            <tr>
                                <td>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="block">
                                                <div class="block-heading">
                                                     <div class="main-text h2">
                                                        @ı.aspnet_Users.UserName
                                                    </div>
                                                    <div class="block-controls">
                                                        <a href="/Ilan/Index"> <span aria-hidden="true" class="icon icon-cross icon-size-medium 
                                                                                     block-control-remove"></span> </a>
                                                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                                                    </div>
                                                </div>
                                                <div class="block-content-outer">
                                                    <div class="block-content-inner">
                                                        <form role="form" action="/CV/Index" method="post">

                                                            <div class="form-group">
                                                                <label for="exampleInputPassword1">@ı.OKUL.okulADI</label>

                                                            </div>
                                                            <div class="form-group">
                                                                <label for="exampleInputPassword1">@ı.EGITIMSEVIYESI.egitimseviyeADI</label>

                                                            </div>
                                                            <div class="form-group">
                                                                <label for="exampleInputPassword1">@ı.YABANCIDIL.yabancidilADI</label>

                                                            </div>
                                                            <div class="form-group">

                                                                <label for="exampleInputPassword1">@ı.cinsiyet</label>

                                                            </div>
                                                            <div class="form-group">

                                                                <label for="exampleInputPassword1">@ı.yetenek</label>

                                                            </div>
                                                            <div class="form-group">

                                                                <label for="exampleInputPassword1">@ı.referans</label>

                                                            </div>

                                                            <div class="form-group">

                                                                <label for="exampleInputPassword1">@ı.dogumgunu</label>

                                                            </div>

                                                            @* <button type="button" class="btn btn-primary">Başvur</button>*@
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>