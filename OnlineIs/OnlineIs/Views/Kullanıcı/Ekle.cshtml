
@{
    ViewBag.Title = "Ekle";
}

@section head{
    <style>
        #hata {
            color: red;
            font-size: 16px;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcı Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Kullanıcı/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <a><span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span></a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kullanıcı/Ekle" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullancı Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail" placeholder="Kullanıcı adı giriniz" name="KullaniciAdi" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Parola:</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Parola giriniz" name="Parola" min="3" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email:</label>
                            <input type="text" class="form-control" id="exampleInputEmail" placeholder="Email giriniz" name="Email" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Gizli Soru:</label>
                            <input type="text" class="form-control" id="exampleInputEmail" placeholder="Gizli soru giriniz" name="GizliSoru" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Gizli Cevap:</label>
                            <input type="text" class="form-control" id="exampleInputEmail" placeholder="Gizli Cevap giriniz" name="GizliCevap" />
                        </div>



                        <button type="submit" class="btn btn-primary">Kaydet</button>

                    </form>
                    <span id="hata">@ViewBag.Mesaj</span>
                </div>
            </div>
        </div>

    </div>
</div>






