
@{
    ViewBag.Title = "IlanEkle";
}
@using OnlineIs.Models

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    İlan Ver
                </div>
                @*<div class="block-controls">
                        <a href="/Content//Sirket/IlanEkle"> <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span> </a>
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>*@
            </div>

            <div class="block-content-outer">

                <div class="block-content-inner">
                    <form role="form" action="/Ilan/IlanEkle" method="post">

                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                İlan Adı
                            </label> <br />
                            <input type="text" name="ilanADI" class="form-control" id="exampleInputEmail1" placeholder="İlan Adı Giriniz" />

                        </div>


                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Departman
                            </label><br />
                            <select name="departmanID" class="form-control">
                                @foreach (DEPARTMAN dprtmn in ViewBag.Departman)
                                {
                                    <option value="@dprtmn.departmanID">@dprtmn.departmanADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Pozisyon
                            </label><br />
                            <select name="pozisyonID" class="form-control">
                                @foreach (POZISYON pzsyn in ViewBag.Pozisyon)
                                {
                                    <option value="@pzsyn.pozisyonID">@pzsyn.pozisyonADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Çalışma Şekli
                            </label><br />
                            <select name="calismaID" class="form-control">
                                @foreach (CALISMASEKLI clsm in ViewBag.CalismaSekli)
                                {
                                    <option value="@clsm.calismaID">@clsm.calismaADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Yabancı Dil</label><br />
                            <select name="yabancidilID" class="form-control">
                                @foreach (YABANCIDIL yd in ViewBag.YDil)
                                {
                                    <option value="@yd.yabancidilID">@yd.yabancidilADI</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Eğitim Seviyesi</label><br />
                            <select name="egitimseviyeID" class="form-control">
                                @foreach (EGITIMSEVIYESI egtm in ViewBag.EgitimSeviyesi)
                                {
                                    <option value="@egtm.egitimseviyeID">@egtm.egitimseviyeADI</option>
                                }

                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Nitelikler</label><br />
                            <input type="text" name="Nitelikler" class="form-control" id="exampleInputPassword1" placeholder="Açıklama Giriniz">
                        </div>
                     
                        <button type="submit" class="btn btn-primary">Kaydet</button>
</div>

                </form>
            </div>

        </div>
    </div>
</div>
</div>

